<form method="post" action="{{ path('osoba_delete', {'id': osoba.id}) }}" onsubmit="return confirm('Jeste li sigurni da želite obrisati?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ osoba.id) }}">
    <button class="btn btn-danger">Obriši</button>
</form>
